<!DOCTYPE html>

<html>
<head>
    <
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-success fixed-top">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Inicio</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#fm-menu" aria-controls="fm-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="fm-menu">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" id="menu-categorias" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Propietarios</a>

                            <div class="dropdown-menu" aria-labelledby="menu-categorias">
                                <a asp-controller="Propietario" asp-action="Create" class="dropdown-item">Cargar</a>
                                <div class="dropdown-divider"></div>
                                <a asp-controller="Propietario" asp-action="Index" class="dropdown-item">Ver</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Inmuebles</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Alquileres</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        <div class="container mt-3">
            @if (ViewBag.Id != null)
            {//alta exitosa
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>¡Éxito!</strong> La entidad fue dada de alta con id: @ViewBag.Id
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><span class="lnr lnr-cross-circle"></span></span>
                    </button>
                </div>
            }
            else if (!String.IsNullOrWhiteSpace(ViewBag.Error))
            {//ocurrió un error
                <environment names="Development">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>¡Error!</strong> Ocurrió: @ViewBag.Error
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true"><span class="lnr lnr-cross-circle"></span></span>
                        </button>
                        <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false"><span class="lnr lnr-plus-circle"></a>
                        <div class="collapse multi-collapse" id="multiCollapseExample1">
                            @ViewBag.StackTrace
                        </div>
                    </div>
                </environment>
            }
        </div>
        <div class="m-1 p-1">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <span class="text-muted">&copy; @DateTime.Today.Year Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

</body>
</html>